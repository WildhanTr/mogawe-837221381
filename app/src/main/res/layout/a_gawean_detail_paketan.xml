<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/container">

    <include
        android:id="@+id/appBar"
        layout="@layout/appbar_light" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:visibility="gone"
                android:src="@drawable/im_logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Campaign di Sosial Media"
                android:layout_marginLeft="@dimen/font_xxbig"
                android:layout_gravity="left"
                android:textStyle="bold"
                android:textSize="@dimen/font_big"
                android:layout_marginTop="@dimen/font_xxxbig"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi"
                android:layout_marginLeft="@dimen/font_xxbig"
                android:layout_gravity="left"
                android:textStyle="bold"
                android:textSize="@dimen/font_big"
                android:layout_marginTop="@dimen/space_xdouble"
                android:textColor="@color/grey_600"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/font_xxbig"
                android:layout_marginTop="@dimen/spacex"
                android:layout_marginRight="20dp"
                app:contentPadding="20dp"
                app:cardBackgroundColor="#F3F2F2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Melakukan campaign untuk produk PowerBank terbaru di sosial media dengan cara memposting gambar dan caption pada sosial media yang ditentukan."
                    android:layout_gravity="left"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:textColor="@color/grey_600"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PESONA"
                android:layout_marginLeft="@dimen/font_xxbig"
                android:layout_gravity="left"
                android:textSize="@dimen/font_small"
                android:layout_marginTop="@dimen/space_xdouble"
                android:textColor="@color/grey_600"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/font_xxbig"
                android:layout_marginTop="@dimen/spacex"
                android:layout_marginRight="20dp"
                app:contentPadding="10dp"
                app:cardBackgroundColor="#F3F2F2">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="39dp"
                        android:layout_height="39dp"
                        android:src="@drawable/ic_word"/>

                    <ImageView
                        android:layout_width="39dp"
                        android:layout_height="39dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ic_calculator"/>

                    <ImageView
                        android:layout_width="39dp"
                        android:layout_height="39dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ic_location"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DETAIL GAWEAN"
                android:layout_marginLeft="@dimen/font_xxbig"
                android:layout_gravity="left"
                android:textSize="@dimen/font_small"
                android:layout_marginTop="@dimen/space_xdouble"
                android:textColor="@color/grey_600"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/font_xxbig"
                android:layout_marginTop="@dimen/spacex"
                android:layout_marginRight="20dp"
                app:contentPadding="10dp"
                app:cardBackgroundColor="#F3F2F2">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expired in 1 days"
                        android:gravity="center"
                        android:drawablePadding="10dp"
                        android:layout_gravity="center"
                        android:drawableLeft="@drawable/ic_clock"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Rp. 16.000"
                        android:drawablePadding="10dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:drawableLeft="@drawable/ic_money"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Workplace"
                android:layout_marginLeft="@dimen/font_xxbig"
                android:layout_gravity="left"
                android:textSize="@dimen/font_small"
                android:layout_marginTop="@dimen/space_xdouble"
                android:textColor="@color/grey_600"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/font_xxbig"
                android:layout_marginTop="@dimen/spacex"
                android:layout_marginRight="20dp"
                app:contentPadding="10dp"
                app:cardBackgroundColor="#F3F2F2">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="INSTAGRAM"
                        android:gravity="center"
                        android:drawablePadding="10dp"
                        android:layout_gravity="center"
                        android:drawableLeft="@drawable/ic_vector_instagram"/>


                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/font_xxbig"
                android:layout_marginTop="@dimen/spacex"
                android:layout_marginRight="20dp"
                app:contentPadding="10dp"
                app:cardBackgroundColor="#F3F2F2">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TWITTER"
                        android:gravity="center"
                        android:drawablePadding="10dp"
                        android:layout_gravity="center"
                        android:drawableLeft="@drawable/ic_vector_twitter"/>


                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maps"
                android:layout_marginLeft="@dimen/font_xxbig"
                android:layout_gravity="left"
                android:textSize="@dimen/font_small"
                android:layout_marginTop="@dimen/space_xdouble"
                android:textColor="@color/grey_600"/>
            
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="375dp"
                android:layout_marginTop="10dp"
                android:background="@color/grey_600"
                android:layout_marginLeft="@dimen/font_xxbig"
                android:layout_marginRight="@dimen/font_xxbig"
                />

            <Button
                android:id="@+id/btnSimpan"
                style="@style/GenericRaisedButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="@dimen/font_xxbig"
                android:layout_marginRight="@dimen/font_xxbig"
                android:text="Paham"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/white" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>