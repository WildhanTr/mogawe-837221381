<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/white"
    android:layout_marginTop="10dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgGawean"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:src="@drawable/im_logo"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.mogawe.mosurvei.util.ui.LatoTextView
                        android:id="@+id/txtJudulGawean"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Campaign di Social Med..."
                        android:textSize="@dimen/font_medium"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <androidx.constraintlayout.utils.widget.ImageFilterView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_more"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <com.mogawe.mosurvei.util.ui.LatoTextView
                    android:id="@+id/txtDeskripsi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:text="Melakukan posting komentar pada akun instagram bola sesuai instruksi ..."
                    android:textSize="@dimen/font_tiny"/>

            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <com.mogawe.mosurvei.util.ui.LatoTextView
                android:id="@+id/txtSosmed"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_tiny"
                android:layout_gravity="center"
                android:text="Instagram, Facebook"
                android:drawableLeft="@drawable/ic_social_flickr"/>

            <com.mogawe.mosurvei.util.ui.LatoTextView
                android:id="@+id/txtJmlGawean"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_tiny"
                android:layout_gravity="center"
                android:text="2 Gawean"
                android:drawableLeft="@drawable/ic_bag"/>

            <com.mogawe.mosurvei.util.ui.LatoTextView
                android:id="@+id/txtHargaGawean"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_medium"
                android:text="Rp. 16.000"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.cardview.widget.CardView>